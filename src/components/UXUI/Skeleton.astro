---
const {img, minHeight = '200', skeleton = true } = Astro.props;
---
<div class="flex flex-wrap">
    <div class="w-full px-1">
        <div class="relative flex flex-col min-w-0 break-words bg-offset shadow-soft-xl rounded-2xl bg-clip-border">
            <div class="flex-auto ">
                <div class="flex flex-wrap">
                    <div class="rounded-lg shadow w-full">
                        <div class="w-full max-w-full p-1">
                            <div class="border-black/12.5 shadow-soft-xl relative flex h-full min-w-0 flex-col break-words rounded-2xl border-0 border-solid bg-offset bg-clip-border p-1">
                                
                                <div
                                    class="relative h-full overflow-hidden bg-cover  bg-fixed rounded-xl"
                                    style={`background-image: url(${img})`}
                                >

                              
                                    <span class="absolute top-0 left-0 w-full h-full bg-center bg-cover bg-gradient-to-tl from-gray-900 to-slate-800 opacity-80" />
                                   
                                    {skeleton && (
                                    <div class="grid h-full justify-center py-10" id="skeleton" >
                                        <div class="flex flex-col m-8 rounded shadow-md w-60 sm:w-80 animate-pulse h-96 min-h-fit">
                                            <div class="h-48 rounded-t bg-gray-700"></div>
                                            <div class="flex-1 px-4 py-8 space-y-4 sm:p-8 bg-gray-900">
                                                <div class="w-full h-6 rounded bg-gray-700"></div>
                                                <div class="w-full h-6 rounded bg-gray-700"></div>
                                                <div class="w-3/4 h-6 rounded bg-gray-700"></div>
                                            </div>
                                        </div>                   
                                    </div>
                                    )}
                                  

                                    <div class={`relative z-10 flex flex-col flex-auto h-full p-4 min-h-[${minHeight}px]`}>
                                      
                                        
                                        <slot />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>