---
import '@s/index.css';
import Header from '@l/Header.astro';
import Nav from "@l/Nav.astro";
const {
	title = 'RentEarth.com',
	description = 'Rent Earth - Atlas Intelligence',
	image = '/assets/img/social.png',
} = Astro.props; 
const url = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en" class="motion-safe:scroll-smooth" data-theme="dark">
	<head>
		<Header title={title} description={description} url={url} image={image} />
		<slot name="header" />
	</head>

	<body
		class="text-base bg-zinc-950 text-default selection:bg-secondary selection:text-white"
	>
        <Nav />
		<slot />
	</body>
</html>